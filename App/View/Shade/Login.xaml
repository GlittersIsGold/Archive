<Page x:Class="Archive.View.Shade.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Archive.View.Shade"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логин" HorizontalAlignment="Left"/>
            <TextBox Name="TbLogin"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Left"/>
            <PasswordBox Name="PbLogin"/>
            <Button Name="BtnLogin" Content="Войти" Width="120" Height="35"/>
        </StackPanel>
    </Grid>
</Page>
